<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <script type="text/javascript" src="/script-slider.js" defer></script>
    <title>Administrative Dashboard</title>
  </head>
  <body>
    <div class="admin-navbar">
      <div class="container">
        <a href="/" class="nav-logo">
          <img
            src="/images/ReMaxLogo.webp"
            alt="ReMax Logo"
            width="60"
            height="auto"
          />
          Administrative Dashboard
        </a>
      </div>
    </div>
    <div class="slide-container">
      <button class="handle left-handle">
        <div class="text">&#8249;</div>
      </button>
      <div class="slider">
        <% article.forEach(article => {%>
        <div class="card">
          <div
            class="card-img"
            style="background-image: url('<%= article.imgURL %>')"
            >
            <div class="card-body admin">
              <h8 class="card-title"><%= article.headline %></h8>
              <div class="card-text"><%= article.description %></div>
              <div class="card-subtitle">
                Date Listed: <%= article.createdAt.toLocaleDateString()%>
              </div>
            </div>
          </div>
          <div class="admin-btns">
            <a href="<%= article.slug %>" class="admin-btn">Preview</a>
            <a
              href="edit/<%= article.id %>?imgURL=<%= article.imgURL %>"
              class="admin-btn"
              >Edit</a
            >
            <form
              action="/articles/<%= article.id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button type="submit" class="admin-btn">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <button class="handle right-handle">
        <div class="text">&#8250;</div>
      </button>
    </div>
    <div class="gaugeWindow">
      <h1>dashboard window here</h1>
    </div>
    <a href="/articles/new-pic" class="std-btn">New Listing </a>
  </body>
</html>
