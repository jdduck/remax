<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Admin-Editing</title>
  </head>
  <body>
    <div class="container">
      <h1>Edit Listing</h1>
      <form
        action="/articles/uploader?artID=<%= article.id %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <label class="custom-file-input" for="imgURL">Showcase</label>
        <input
          required
          value="<%= article.imgURL %>"
          type="file"
          name="imgURL"
        />
        <% global.oldImgURL = article.imgURL %>
        <button type="submit" class="std-btn">Save Image</button>
      </form>
      <img
        src="<%= article.imgURL %>"
        onerror="this.src = '/storage/default.jpg'"
        alt="Showcase Image "
        style="max-width: 500px"
      />
      <form action="/articles/<%= article.id %>?_method=PUT" method="POST">
       <%- include('_form_fields') %>
      </form>
    </div>
  </body>
</html>
